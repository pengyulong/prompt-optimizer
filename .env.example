# ===========================================
# 提示词优化器环境配置示例
# 复制此文件为 .env 并填入实际值
# ===========================================

# 应用配置
APP_ENV=development
DEBUG_MODE=false
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=5

# Ollama 配置 (本地部署)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60

# OpenAI 配置
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60

# Anthropic Claude 配置
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_TIMEOUT=60

# 阿里云通义千问配置
QWEN_API_KEY=your_qwen_api_key_here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QWEN_TIMEOUT=60

# 智谱 ChatGLM 配置
CHATGLM_API_KEY=your_chatglm_api_key_here
CHATGLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4
CHATGLM_TIMEOUT=60

# DeepSeek 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_TIMEOUT=60

# 月之暗面 Kimi 配置
MOONSHOT_API_KEY=your_moonshot_api_key_here
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
MOONSHOT_TIMEOUT=60

# 百度文心一言配置
ERNIE_API_KEY=your_ernie_api_key_here
ERNIE_SECRET_KEY=your_ernie_secret_key_here
ERNIE_BASE_URL=https://aip.baidubce.com
ERNIE_TIMEOUT=60

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379/0

# 数据库配置 (可选)
DATABASE_URL=sqlite:///./app.db

# Streamlit 配置
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost